#!/bin/bash
#
# use fzf to search and preview files before opeing in vim
#
# usage: vzf

# colors for printing
GREEN='\033[1;32m'
PURP='\033[1;34m'
NC='\033[0m' # No Color

if [[ "$#" == 0 ]];
then
  # no args, search for files and preview with fzf
  vim -o "$(fzf --preview 'bat --style=numbers --color=always --line-range :500 {}')"
else
  # command was used wrong
  echo -e "usage: ${PURP}vzf${NC}"
  echo -e "    - search and preview files before opeing in ${GREEN}vim${NC}"
fi
